<li data-id="<%= food.id %>">
	<h4><%= food.food_name %></h4>
	<p><%= food.quantity %></p>
	<p><%= food.expiration %></p>

	<button class="edit-button btn btn-default">Edit Me</button>
	<button class="delete-button btn btn-default">Delete Me</button>

	<%= form_for(food, url: user_foods_path, :html => { :class => "edit-food-form", :style => "display:none;" }) do |f|%>
		<%= f.label :food_name %>
		<%= f.text_field :food_name, :placeholder => "Food Name" %>
		<%= f.label :quantity %>
		<%= f.text_field :quantity, :placeholder => "Quantity" %>
		<%= f.label :expiration %>
		<%= f.date_field :expiration, :placeholder => "Expiration" %>
		<%= f.submit "Submit" %>
	<% end %>
</li>
